{
  "version": 2,
  "builds": [
    {
      "src": "frontend/build/server/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["frontend/build/**"]
      }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api-v1/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/server/index.js"
    }
  ],
  "functions": {
    "backend/index.js": {
      "runtime": "nodejs18.x"
    },
    "frontend/build/server/index.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
